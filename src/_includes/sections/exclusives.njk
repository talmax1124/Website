<div class="section-styling">
  <h1 class="text-[#061734] carousel-title">Exclusives</h1>
  <div class="main--carousel mt-5">
    {%- for exclusives in collections.exclusives -%} {%- for img in
    exclusives.data.img -%}
    <div class="carousel-cell mr-1">
      <img src="{{ img }}" class="rounded-md" draggable="false" />
    </div>
    {%- endfor -%} {%- endfor -%}
  </div>
  <div class="flex items-center mt-5" style="justify-content: flex-end">
    <div class="controls-events">
      <button
        class="one-events bg-black text-white carousel-button button---previous rounded-md"
      >
        <i class="fas fa-arrow-left"></i>
      </button>
      <button
        class="two-events bg-black text-white carousel-button button---next rounded-md"
      >
        <i class="fas fa-arrow-right"></i>
      </button>
    </div>
  </div>
</div>

<script>
  var elem = document.querySelector(".main--carousel");
  var flkty = new Flickity(elem, {
    cellAlign: "left",
    imagesLoaded: true,
    percentPosition: false,
    prevNextButtons: false,
    pageDots: false,
    infinite: true,
  });
  var previousButton = document.querySelector(".button---previous");
  previousButton.addEventListener("click", function () {
    flkty.previous();
  });
  var nextButton = document.querySelector(".button---next");
  nextButton.addEventListener("click", function () {
    flkty.next();
  });
</script>
